{% endblock %}
{% block content %}
<h1 class="title has-text-centered">Ajout d'un utilisateur</h1>
<section class="hero">
    <div class="hero-body">
        <form class="container"  action="/registerUser" method="post">
            <label class="label" for="name">name</label>
            <input class="input is-normal" type="text" name="name">
            <label class="label" for="firstName">firstName</label>
            <input class="input is-normal" type="text" name="firstName">
            <label class="label" for="email">email</label>
            <input class="input is-normal" type="text" name="email">
            <label class="label "for="password">password</label>
            <input  class="input is-normal" type="text" name="password">
            <button class="button hero-buttons" type="submit">Envoyer</button>
        </form>
    </div>
</section>
{% endblock %}
