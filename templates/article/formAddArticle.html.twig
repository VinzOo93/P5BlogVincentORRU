{% extends "/base.html.twig" %}
{% block stylesheets %}
    <link rel="stylesheet" href="/css/blog.css">
{% endblock %}
{% block banner %}
    {% include "/blog/headerBlog.html.twig" %}
{% endblock %}
{% block content %}
    <h1 class="title has-text-centered">Publier un article</h1>
    <section class="hero">
        <div class="hero-body">
            <form class="container"  action="/addArticle" method="post" enctype="multipart/form-data">
                <label class="label" for="title">Titre</label>
                <input class="input is-normal" type="text" name="title">
                <label class="label" for="tag">Tag</label>
                <input class="input is-normal" type="text" name="tag">
                <label class="label" for="image">Image</label>
                <input class=" is-normal" type="file" name="image">
                <label class="label" for="content">Contenu</label>
                <textarea class="textarea" name="content" id="content" cols="30" rows="10"></textarea>
                <button class="button hero-buttons" type="submit">Envoyer</button>
            </form>
        </div>
    </section>
{% endblock %}
